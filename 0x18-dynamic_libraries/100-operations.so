#include <stdio.h>

/* Function prototypes */
int add(int a, int b);
int sub(int a, int b);
int mul(int a, int b);
int divi(int a, int b);
int mod(int a, int b);

/* Function implementations */
int add(int a, int b)
{
    return a + b;
}

int sub(int a, int b)
{
    return a - b;
}

int mul(int a, int b)
{
    return a * b;
}

int divi(int a, int b)
{
    if (b == 0)
    {
        printf("Error: Cannot divide by zero\n");
        return 0;
    }
    return a / b;
}

int mod(int a, int b)
{
    if (b == 0)
    {
        printf("Error: Cannot calculate modulus with zero\n");
        return 0;
    }
    return a % b;
}

